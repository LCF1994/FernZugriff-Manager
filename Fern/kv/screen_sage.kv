<ScreenSage1>:
    name: 'sage1'
    server: app.SAGE_1

    ScreenSageDefault:
        srv_name: 'Servidor SAGE 1'

<ScreenSage2>:
    name: 'sage2'
    server: app.SAGE_2
    
    ScreenSageDefault:
        srv_name: 'Servidor SAGE 2'


<ScreenSageDefault>:
    server: self.parent.server
    # Header
    MDIconButton:
        icon:'menu'
        on_press: app.navbar.set_state("open")
        pos_hint: { 'center_x': .05, 'center_y': .925 }
    ServerTitle: # Left
        target: root.server
        title: root.srv_name
        pos_hint: { 'center_x': .2, 'center_y': .925 }
        #md_bg_color: [1,0,0,1]
    ConnectionState: # Center
        target: root.server
        pos_hint: {'center_x': .75 , 'center_y': .93}
    MDIconButton: # Right
        icon:'cog'
        user_font_size: dp(40)
        on_release: root.open_card()
        pos_hint: {'center_x': .925, 'center_y': .925}

    MDProgressBar: # Separator
        id: progress_bar
        color: app.theme_cls.accent_color
        size_hint_x: .95
        pos_hint: {'center_x': .5 , 'center_y': .875}
        type:'indeterminate'


    # Body
    BodyContainer:
        id: body_container
        pos_hint: {'center_x': .5 , 'center_y': .5}
        size_hint: .95 , 1
        spinner: False
        target: root.server


    # Bottom
    MDGridLayout:
        rows:1
        pos_hint: {'center_x': .5 , 'center_y': .1}
        size_hint_y: .15
        padding: 15, 0, 15, 10
        spacing: 15

        CommandCard:
            name: 'VisorAcesso'
            image: 'Fern/assets/images/fluxo.jpg'
            title: 'VisorAcesso'
            btn_icon: 'open-in-new'
            btn_text: 'Abrir'
            target: root.server
            release_function: {'function': self.open_visor_acesso}

        CommandCard:
            name: 'ProcessCard'
            image: 'Fern/assets/images/abs_img_red.jpg'
            title: 'Processos'
            btn_icon: 'information-variant'
            btn_text: 'Verificar'
            target: root.server
            release_function: {'function': self.open_process_card}

        CommandCard:
            name: 'CMDCard'
            image: 'Fern/assets/images/cryptocode.jpg'
            title: 'Remote Terminal'
            btn_icon: 'console-line'
            btn_text: 'Executar'
            target: root.server
            release_function: {'function': self.execute_remote_command}
