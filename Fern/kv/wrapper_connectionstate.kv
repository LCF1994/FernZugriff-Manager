<ConnectionState>
    size_hint: .25, None
    height: 45
    spacing: 10
    padding: 15, 0, 0, 0

    AnchorLayout:
        anchor_x:'left'
        anchor_y:'center'
        MDBoxLayout:
            adaptive_height:True
            adaptive_width:True
            MDSpinner:
                size_hint: None, None
                size: dp(15), dp(15)
                pos_hint: {'center_y': .5}
                active: root.spinner
                # active:True

    AnchorLayout:
        anchor_x:'center'
        anchor_y:'center'
        MDBoxLayout:
            adaptive_height:True
            adaptive_width:True
      #      md_bg_color: [0,1,0,1]
            MDLabel:
                text: root.conn_state_txt
                adaptive_height:True

    AnchorLayout:
        anchor_x:'right'
        anchor_y:'center'
        MDBoxLayout:
            adaptive_height:True
            adaptive_width:True
            MDFillRoundFlatButton:
                adaptive_height: True
                text: 'Conectar'
                on_release: root.connect()
