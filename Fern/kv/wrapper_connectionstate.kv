<ConnectionState>
    size_hint: .25, None
    height: 45
    spacing: 10
    padding: 10, 0, 0, 0

    AnchorLayout:
        anchor_x:'left'
        anchor_y:'center'
        MDBoxLayout:
            adaptive_height:True
            adaptive_width:True
            #md_bg_color: [1,0,0,1]
            MDSpinner:
                size_hint: None, None
                size: dp(15), dp(15)
                pos_hint: {'center_y': .5}
                active: root.spinner
                #active:True

    AnchorLayout:
        anchor_x:'right'
        anchor_y:'center'
        MDBoxLayout:
            adaptive_height:True
            adaptive_width:True
            #md_bg_color: [0,1,0,1]
            MDLabel:
                text: root.conn_state_txt
                adaptive_height:True

    AnchorLayout:
        anchor_x:'right'
        anchor_y:'center'
        MDBoxLayout:
            id:btn_container
            adaptive_height:True
            adaptive_width:True
            #md_bg_color: [0,0,1,1]
            ConnectionButton:
                on_release: root.connect()

<ConnectionButton>
    adaptive_height: True
    text: 'Conectar'

<DisconnectionButton>
    adaptive_height: True
    text: 'Desconectar'
    theme_text_color: "Custom"
    text_color: [ 1, 0, 0, 1 ]
    line_color: [ 1, 0, 0, 1 ]
