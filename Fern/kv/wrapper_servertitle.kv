<ServerTitle>:
    orientation: 'vertical'
    pos_hint: { 'center_x': .525, 'center_y': .925 }
    adaptive_height: True
    spacing: 10
    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height: True
        MDLabel:
            adaptive_height: True
            text: root.title
            font_style: 'Body1'
            size_hint_x: .9
        MDBoxLayout:
            adaptive_height: True
            padding: 10, 0, 0, 0
            spacing: 5
            size_hint_x: .2
            MDLabel:
                text: '    IP:'
                adaptive_height: True
                font_style: 'Caption'
                size_hint_x: .2
            MDLabel:
                text: root.server_ip
                adaptive_height: True
                font_style: 'Caption'
                size_hint_x: .8
