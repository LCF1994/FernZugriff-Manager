<ServerTitle>:
    orientation: 'vertical'
    adaptive_height: True
    adaptive_width: True
    spacing: 10
    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height: True
        adaptive_width: True
        MDLabel:
            adaptive_height: True
            size_hint: None, None
            width: 150
            text: root.title
            font_style: 'H6'
        MDBoxLayout:
            adaptive_height: True
            padding: 10, 0, 0, 0
            MDLabel:
                text: 'IP: '
                adaptive_height: True
                font_style: 'Caption'
                size_hint_x: .2
            MDLabel:
                text: root.server_ip
                font_style: 'Caption'
                size_hint_x: .8
