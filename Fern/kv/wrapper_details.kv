<ServerDetails>:
    size_hint: .3, .65
    spacing: 5
    MDStackLayout:
        pos_hint: {'center_x': .5, 'center_y': .5}
        padding: [5, ]
        spacing: 5

        MDBoxLayout:
            pos_hint: {'center_x': .5, 'center_y': .9}
            size_hint_y: .15
            adaptive_height: True
            padding: [5,]
            Image:
                source: 'Fern/assets/images/sage.png'
                size_hint: None, None
                size: 35, 35
            MDBoxLayout:
                orientation:'vertical'
                size_hint_x: .6
                pos_hint: {'center_x': .5, 'center_y': .5}
                padding: 10, 0, 0, 0
                MDBoxLayout:
                    adaptive_height: True
                    size_hint_y:.5
                    padding: 0, 1, 0, 1
                    MDLabel:
                        text: root.hostname
                        font_style: 'Body1'
                        size_hint_x: .8
                    MDIcon:
                        icon: root.os
                        font_size: 14
                        size_hint_x: .2
                MDBoxLayout:
                    size_hint_y:.5
                    padding: 0, 1, 0, 1
                    MDLabel:
                        text: 'Sage:'
                        font_style: 'Body1'
                        size_hint_x: .5
                    MDLabel:
                        text: root.version
                        font_style: 'Body2'
                        size_hint_x: .2
        MDSeparator:
            padding: 0, 5, 0, 5

        MDBoxLayout:
            adaptive_height: True
            padding: [10, ]
            MDLabel:
                text: 'Base:'
                font_style: 'Body1'
            MDLabel:
                text: root.database
                font_style: 'Body2'
                size_hint_x: .7

        MDBoxLayout:
            adaptive_height: True
            padding: [10, ]
            MDLabel:
                text: 'GCD:'
                font_style: 'Body2'
            MDLabel:
                text: root.gcd
                font_style: 'Body2'
                size_hint_x: .7
