<ServerDetails>:
    size_hint: .3, .65
    spacing: 5
    MDStackLayout:
        pos_hint: {'center_x': .5, 'center_y': .5}
        padding: [5, ]
        spacing: 5

        MDBoxLayout:
            pos_hint: {'center_x': .5, 'center_y': .9}
            size_hint_y: .15
            adaptive_height: True
            padding: [5,]
            Image:
                source: 'Fern/assets/images/sage.png'
                size_hint: None, None
                size: 35, 35
            MDBoxLayout:
                orientation:'vertical'
                size_hint_x: .6
                pos_hint: {'center_x': .5, 'center_y': .5}
                padding: 10, 0, 0, 0
                MDBoxLayout:
                    adaptive_height: True
                    size_hint_y:.5
                    padding: 0, 1, 0, 1
                    MDLabel:
                        text: root.hostname
                        font_style: 'Body1'
                        size_hint_x: .8
                    MDIcon:
                        icon: root.os
                        font_size: 14
                        size_hint_x: .2
                MDBoxLayout:
                    size_hint_y:.5
                    padding: 0, 1, 0, 1
                    MDLabel:
                        text: 'Sage:'
                        font_style: 'Body1'
                        size_hint_x: .5
                    MDLabel:
                        text: root.version
                        font_style: 'Body2'
                        size_hint_x: .2
        MDSeparator:
            padding: 0, 5, 0, 5

        Item:
            title:'Base'
            value: root.database

        MDSeparator:
            padding: 0, 5, 0, 5

        Item:
            title: 'GCD'
            value: root.gcd
            theme: 'Custom'
            color: root.gcd_color

        MDSeparator:
            padding: 0, 5, 0, 5

        Item:
            title:'Modelo'
            value: root.dbtype

        Item:
            title:'Difusao'
            value: root.redundancy

        Item:
            title:'SOM'
            value: root.sound

        Item:
            title:'NOH'
            value: root.network_node
            
        MDSeparator:
            padding: 0, 5, 0, 5



<Item>:
    adaptive_height: True
    padding: [10, ]
    MDLabel:
        text: '{}:'.format(root.title)
        font_style: 'Body2'
    MDLabel:
        text: root.value
        font_style: 'Body2'
        theme_text_color: root.theme
        text_color: root.color
        size_hint_x: .7
