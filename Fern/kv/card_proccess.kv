<ProcessCard>:
    size_hint: .6, .8
    pos_hint: {'center_x': .5, 'center_y': .585}
    elevation: 20
    radius: [dp(36), ]

    on_touch_down: self.check_card_focus(args)

    MDFloatLayout:
        MDLabel:
            halign:'center'
            pos_hint: {'center_x': .5, "center_y": .95}
            text:'Processos - SAGE'
            font_style: 'H6'
        MDSeparator:
            pos_hint: {'center_x': .5, "center_y": .9}
            size_hint_x: .9

        ScrollView:
            pos_hint: {'center_x': .5, "center_y": .5}
            size_hint: .9, .7
            MDList:
                id:md_list
        
        MDFillRoundFlatButton:
            pos_hint: {'center_x': .25, "center_y": .05}
            text:'Create'
            on_release:root.create_list()
        
        MDFillRoundFlatButton:
            pos_hint: {'center_x': .5, "center_y": .05}
            text:'Update'
            on_release:root.update_list()

        MDFillRoundFlatButton:
            pos_hint: {'center_x': .75, "center_y": .05}
            text:'Clear'
            on_release:root.clear_list()


<ListItem>:
    on_size:
        self.ids._right_container.width = container.width
        self.ids._right_container.x = container.width

    ProccessStatus:
        id: container

        MDLabel:
            text: root.status
