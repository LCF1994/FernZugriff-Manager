<Srv1Screen>:
    name: 'sage1'
    app: app
    server: app.SAGE_1

    MDFloatLayout:
        # Header
        ServerTitle: # Left
            id: srv_title
            title:'Servidor SAGE 1'
            server_ip: app.SAGE_1.host

        ConnectionState: # Center
            target: root.server
            pos_hint: {'center_x': .75 , 'center_y': .93}

        MDIconButton: # Right
            icon:'cog'
            user_font_size: dp(40)
            pos_hint: {'center_x': .925, 'center_y': .925}
            on_release: root.open_card()

        MDProgressBar: # Separator
            id: progress_bar
            color: app.theme_cls.accent_color
            size_hint_x: .95
            pos_hint: {'center_x': .5 , 'center_y': .875}
            type:'indeterminate'


        # Body
        BodyContainer:
            id: body_container
            pos_hint: {'center_x': .5 , 'center_y': .5}
            size_hint_x:.95
            spinner: False
            target: root.server


        # Bottom
        MDGridLayout:
            rows:1
            pos_hint: {'center_x': .5 , 'center_y': .1}
            size_hint_y: .15
            padding: 15, 0, 15, 10
            spacing: 15

            CommandCard:
                image: 'Fern/assets/images/fluxo.jpg'
                title: 'VisorAcesso'
                btn_icon: 'open-in-new'
                btn_text: 'Abrir'
                target: root.server
                release_function: {'function':self.open_visor_acesso, 'args':{}}

            CommandCard:
                image: 'Fern/assets/images/abs_img_red.jpg'
                title: 'Processos'
                btn_icon: 'information-variant'
                btn_text: 'Verificar'
                target: root.server
                release_function: {'function':self.open_process_card, 'args':{}}

            CommandCard:
                image: 'Fern/assets/images/cryptocode.jpg'
                title: 'Remote Terminal'
                btn_icon: 'console-line'
                btn_text: 'Executar'
                target: root.server
                release_function: {'function':self.execute_remote_command, 'args':{'cmd':'whoami'}}
