<Srv1Screen>:
    # Header
    MDIconButton: # settings icon
        icon:'cog'
        user_font_size: dp(40)
        pos_hint: {'center_x': .925, 'center_y': .925}
        on_release: root.open_card()

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: { 'center_x': .525, 'center_y': .925 }
        adaptive_height: True
        spacing: 10
        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            MDLabel:
                adaptive_height: True
                text: 'Servidor SAGE 1'
                font_style: 'Body1'
                size_hint_x: .9
            MDLabel:
                id: server_ip
                text: '    IP: xxx.xxx.xxx.xxx'
                adaptive_height: True
                font_style: 'Caption'
                size_hint_x: .9
        # MDSeparator:
        #     size_hint_x: .25
        #     color: app.success_color
        #     padding: 0, 30, 0, 0
    ConnectionState:
        #padding: 0, 20, 0, 0
        pos_hint: {'center_x': .5 , 'center_y': .925}
    MDProgressBar:
        id: progress_bar
        color: app.theme_cls.accent_color
        size_hint_x: .95
        pos_hint: {'center_x': .5 , 'center_y': .875}
        #padding: 0, 0, 0, 10
        type:'indeterminate'
    # Body
    MDBoxLayout:
        id: body_container
        pos_hint: {'center_x': .5 , 'center_y': .5}
        size_hint_x:.95
        # MDCard:
        #     pos_hint: {'center_x': .5 , 'center_y': .525}
        #     size_hint_y: .65
        #     radius: [10, ]

    # Bottom
    MDGridLayout:
        rows:1
        pos_hint: {'center_x': .5 , 'center_y': .1}
        size_hint_y: .15
        padding: 15, 0, 15, 10
        spacing: 15

        CommandCard:
            image: 'Fern/assets/images/fluxo.jpg'
            title: 'VisorAcesso'
            btn_icon: 'open-in-new'
            btn_text: 'Abrir'
        
        CommandCard:
            image: 'Fern/assets/images/abs_img_red.jpg'
            title: 'Detalhes'
            btn_icon: 'information-variant'
            btn_text: 'Solicitar'

        CommandCard:
            image: 'Fern/assets/images/cryptocode.jpg'
            title: 'Remote Terminal'
            btn_icon: 'console-line'
            btn_text: 'Executar'

