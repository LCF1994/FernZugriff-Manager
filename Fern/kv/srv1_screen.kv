<Srv1Screen>:
    # Header
    MDIconButton: # settings icon
        icon:'cog'
        user_font_size: dp(40)
        pos_hint: {'center_x': .925, 'center_y': .925}
        on_release: root.open_card()

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: { 'center_x': .525, 'center_y': .925 }
        adaptive_height: True
        spacing: 10
        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            MDLabel:
                adaptive_height: True
                text: 'Servidor SAGE 1'
                font_style: 'Body1'
                size_hint_x: .9
            MDLabel:
                id: server_ip
                text: '    IP: xxx.xxx.xxx.xxx'
                adaptive_height: True
                font_style: 'Caption'
                size_hint_x: .9
        # MDSeparator:
        #     size_hint_x: .25
        #     color: app.success_color
        #     padding: 0, 30, 0, 0
    ConnectionState:
        #padding: 0, 20, 0, 0
        pos_hint: {'center_x': .5 , 'center_y': .925}
    MDProgressBar:
        id: progress_bar
        color: app.theme_cls.accent_color
        size_hint_x: .95
        pos_hint: {'center_x': .5 , 'center_y': .875}
        #padding: 0, 0, 0, 10
        type:'indeterminate'
    # Body
    MDBoxLayout:
        id: body_container
        pos_hint: {'center_x': .5 , 'center_y': .5}
        size_hint_x:.95
        # MDCard:
        #     pos_hint: {'center_x': .5 , 'center_y': .525}
        #     size_hint_y: .65
        #     radius: [10, ]

    # Bottom
    MDGridLayout:
        rows:1
        pos_hint: {'center_x': .5 , 'center_y': .1}
        size_hint_y: .15
        padding: 15, 0, 15, 10
        spacing: 15
        MDCard:
            radius: [dp(12), ]
            FitImage:
                pos_hint: {'center_x': .5 , 'center_y': .5}
                source:'Fern/assets/images/fluxo.jpg'
                radius: [dp(12), 0, 0, dp(12)]
                size_hint_x: .5

            MDBoxLayout:
                orientation: 'vertical'
                MDLabel:
                    text: 'VisorAcesso'
                    halign: 'center'
                MDRoundFlatIconButton:
                    pos_hint: { 'center_x': .5, 'center_y': .5}
                    icon:'open-in-new'
                    theme_icon_color: "Custom"
                    icon_color: app.theme_cls.accent_color
                    text:'Abrir'
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.accent_color
                    line_color: 0, 0, 0 ,0

        MDCard:
            radius: [dp(12), dp(12), dp(12), dp(12)]
            FitImage:
                pos_hint: {'center_x': .5 , 'center_y': .5}
                source:'Fern/assets/images/abs_img_red.jpg'
                radius: [dp(12), 0, 0, dp(12)]
                size_hint_x: .5

            MDBoxLayout:
                orientation: 'vertical'
                MDLabel:
                    text: 'Detalhes'
                    halign: 'center'
                MDRoundFlatIconButton:
                    pos_hint: { 'center_x': .5, 'center_y': .5}
                    icon:'information-variant'
                    theme_icon_color: "Custom"
                    icon_color: app.theme_cls.accent_color
                    text:'Solicitar'
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.accent_color
                    line_color: 0, 0, 0 ,0

        MDCard:
            radius: [dp(12), ]
            FitImage:
                pos_hint: {'center_x': .5 , 'center_y': .5}
                source:'Fern/assets/images/cryptocode.jpg'
                radius: [dp(12), 0, 0, dp(12)]
                size_hint_x: .5

            MDBoxLayout:
                orientation: 'vertical'
                MDLabel:
                    text: 'Remote Terminal'
                    halign: 'center'
                MDRoundFlatIconButton:
                    # size_hint_x: 1
                    pos_hint: { 'center_x': .5, 'center_y': .5}
                    icon:'console-line'
                    theme_icon_color: "Custom"
                    icon_color: app.theme_cls.accent_color
                    text:'Executar'
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.accent_color
                    line_color: 0, 0, 0 ,0
                    halign: 'center'
                    valign: 'center'