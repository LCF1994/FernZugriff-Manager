<ConnectionState>
    spacing: 5
    padding: [ 5, ]
    # md_bg_color: [ 1, 1, 1, .5 ]

    MDBoxLayout:
        pos_hint: { 'center_x': .5, 'center_y': .5 }
        adaptive_height:True
        adaptive_width:True
        # md_bg_color: [ 1, 0, 0, .5 ]
        MDSpinner:
            size: dp(15), dp(15)
            size_hint: None, None
            active: root.spinner
            # active:True

    MDBoxLayout:
        pos_hint: { 'center_x': .5, 'center_y': .5 }
        size_hint: 3, 1
        adaptive_height:True
        # md_bg_color: [ 0, 1, 0, .5 ]
        MDLabel:
            text: root.conn_state_txt
            adaptive_height:True
            halign:'center'

    MDBoxLayout:
        id:btn_container
        pos_hint: { 'center_x': .5, 'center_y': .5 }
        adaptive_height:True
        adaptive_width:True
        # md_bg_color: [ 0, 0, 1, .5 ]
        ConnectionButton:
            on_release: root.connect()


<ConnectionButton>
    adaptive_height: True
    text: 'Conectar'

<DisconnectionButton>
    adaptive_height: True
    text: 'Desconectar'
    line_color: app.failure_color
    line_width: 1.25
