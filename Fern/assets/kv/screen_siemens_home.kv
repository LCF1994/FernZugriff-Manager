<SiemensHomeScreen>
    name:'home'

    MDFloatLayout:
        FitImage:
            source: app.resource_path('images/cognisphere.png')
            pos_hint:{'center_x': .9, 'center_y': .5 }
            size_hint: 1, 1

        Image:
            source: app.resource_path('images/siemens.png')
            pos_hint:{'center_x': .2, 'center_y': .9 }
            size_hint: 1, None
            height: 60

        SiemensTitle:
            pos_hint:{'center_x': .3, 'center_y': .45 }
            size_hint: .4, .2

        MDRaisedButton:
            text: 'SAGE 1'
            halign: 'center'
            font_style: 'H6'
            size_hint: .15, .33 / 4.5
            pos_hint:{'center_x': .175, 'center_y': .2 }
            on_press:
                root.manager.current = 'sage1'

        MDRaisedButton:
            text: 'SAGE 2'
            font_style: 'H6'
            halign: 'center'
            size_hint: .15, .33 / 4.5
            pos_hint:{'center_x': .375, 'center_y': .2 }
            on_press:
                root.manager.current = 'sage2'
