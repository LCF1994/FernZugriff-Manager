    MDSeparator:
        md_bg_color:[0,0,0,0]

    MDBoxLayout:
        adaptive_height: True
        orientation:'vertical'
        spacing: 2
        MDLabel:
                # text: "Gerenciador de Acessos"
            text: "Thin Client Dashboard"
            font_style: "H5"
            adaptive_height: True
        MDLabel:
            text: "desenvolvido por Lucas Campos Ferreira"
            font_style: "Caption"
            adaptive_height: True

    MDSeparator:
        md_bg_color:app.theme_cls.primary_color

    ScrollView:
        MDList:
            OneLineIconListItem:
                text: "Home"
                on_press:
                    root.parent.set_state("close")
                    app.screen_manager.current = "home"
                IconLeftWidget:
                    # icon: "lightbulb-outline"
                    icon: "home"
                    on_press:
                        root.parent.set_state("close")
                        app.screen_manager.current = "home"

            OneLineIconListItem:
                text: "Dashboard SAGE 1"
                on_press:
                    root.parent.set_state("close")
                    app.screen_manager.current = "sage1"

                IconLeftWidget:
                    # icon: "centos"
                    icon: "view-dashboard-variant"
                    on_press:
                        root.parent.set_state("close")
                        app.screen_manager.current = "sage1"

            OneLineIconListItem:
                text: "Dashboard SAGE 2"
                on_press:
                    root.parent.set_state("close")
                    app.screen_manager.current = "sage2"
                IconLeftWidget:
                    # icon: "centos"
                    icon: "view-dashboard-variant"
                    on_press:
                        root.parent.set_state("close")
                        app.screen_manager.current = "sage2"
    
            OneLineIconListItem:
                text: "Troca de Visor"
                on_press:
                    root.parent.set_state("close")
                    app.screen_manager.current = "tools"
                IconLeftWidget:
                    icon: "monitor"
                    on_press:
                        root.parent.set_state("close")
                        app.screen_manager.current = "tools"
            
            OneLineIconListItem:
                text: "Teste de Ping"
                on_press:
                    root.parent.set_state("close")
                    app.screen_manager.current = "ping_test"
                IconLeftWidget:
                    icon: "wrench"
                    on_press:
                        root.parent.set_state("close")
                        app.screen_manager.current = "ping_test"

            OneLineIconListItem:
                text: "About"
                on_press:
                    root.parent.set_state("close")
                    app.screen_manager.current = "about"
                IconLeftWidget:
                    icon: "information"
                    on_press:
                        root.parent.set_state("close")
                        app.screen_manager.current = "about"

