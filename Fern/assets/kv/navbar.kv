<MyNavDrawer>
    ContentNavigationDrawer:


<ContentNavigationDrawer>
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: logo.height

        Image:
            id: logo
            size_hint: None, None
            size: "56dp", "56dp"
            source: "Fern/assets/images/sage.png"

    MDLabel:
        text: "Gerenciador de Acessos"
        font_style: "Button"
        adaptive_height: True

    MDLabel:
        text: "desenvolvido por Lucas Campos Ferreira"
        font_style: "Caption"
        adaptive_height: True

    MDSeparator:

    ScrollView:
        MDList:
            OneLineIconListItem:
                text: "Home"
                on_press:
                    root.parent.set_state("close")
                    app.screen_manager.current = "home"
                IconLeftWidget:
                    icon: "lightbulb-outline"
                    on_press:
                        root.parent.set_state("close")
                        app.screen_manager.current = "home"

            OneLineIconListItem:
                text: "Servidor SAGE 1"
                on_press:
                    root.parent.set_state("close")
                    app.screen_manager.current = "sage1"

                IconLeftWidget:
                    icon: "centos"
                    on_press:
                        root.parent.set_state("close")
                        app.screen_manager.current = "sage1"

            OneLineIconListItem:
                text: "Servidor SAGE 2"
                on_press:
                    root.parent.set_state("close")
                    app.screen_manager.current = "sage2"
                IconLeftWidget:
                    icon: "centos"
                    on_press:
                        root.parent.set_state("close")
                        app.screen_manager.current = "sage2"
    
            OneLineIconListItem:
                text: "Ferramentas"
                on_press:
                    root.parent.set_state("close")
                    app.screen_manager.current = "tools"
                IconLeftWidget:
                    icon: "monitor"
                    on_press:
                        root.parent.set_state("close")
                        app.screen_manager.current = "tools"

            OneLineIconListItem:
                text: "About"
                on_press:
                    root.parent.set_state("close")
                    app.screen_manager.current = "about"
                IconLeftWidget:
                    icon: "information"
                    on_press:
                        root.parent.set_state("close")
                        app.screen_manager.current = "about"
