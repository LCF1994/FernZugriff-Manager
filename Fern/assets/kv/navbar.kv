<MyNavDrawer>
    ContentNavigationDrawer:

<ContentNavigationDrawer@MDBoxLayout>
    orientation: "vertical"
    padding: "12dp"
    spacing: "8dp"

    MDSeparator:
        md_bg_color:[0,0,0,0]

    MDBoxLayout:
        adaptive_height: True
        orientation:'vertical'
        spacing: 2
        MDLabel:
            text: "Thin Client Dashboard"
            font_style: "H5"
            adaptive_height: True
        MDLabel:
            text: "desenvolvido por Lucas Campos Ferreira"
            font_style: "Caption"
            adaptive_height: True

    MDSeparator:
        md_bg_color:app.theme_cls.primary_color

    ScrollView:
        NavList:

<NavItem>:
    text: root.text
    on_press:
        app.navbar.set_state("close")
        app.screen_manager.current = self.screen
    IconLeftWidget:
        icon: root.icon
        on_press:
            app.navbar.set_state("close")
            app.screen_manager.current = root.screen
