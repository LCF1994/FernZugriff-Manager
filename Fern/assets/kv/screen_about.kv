<AboutScreen>
    name:'about'

    MDToolbar:
        elevation: 10
        pos_hint: {"top": 1}
        size_hint: 1, .075
        left_action_items:
            [['menu', lambda x: app.navbar.set_state("open")]]

    MDFloatLayout:
        MDLabel:
            text:'Gerenciador de Acesso'
            font_style: "H3"
            adaptive_size: True
            pos_hint:{'center_x': .5, 'center_y': .85 }

        MDLabel:
            text:'Version 00.00'
            adaptive_size: True
            pos_hint:{'center_x': .5, 'center_y': .75 }

        MDLabel:
            text:'Release on May, 2 - 2022'
            adaptive_size: True
            pos_hint:{'center_x': .5, 'center_y': .7 }

        Image:
            source:'./Fern/assets/images/QR.png'
            pos_hint:{'center_x': .5, 'center_y': .475 }

        MDLabel:
            text:'Desenvolvido por Lucas Campos Ferreira'
            font_style: "H6"
            adaptive_size: True
            pos_hint:{'center_x': .5, 'center_y': .2 }

        Image:
            source:'./Fern/assets/images/siemens.png'
            pos_hint:{'center_x': .5, 'center_y': .125 }
