<ProcessCard>:
    size_hint: .6, .8
    pos_hint: {'center_x': .5, 'center_y': .585}
    radius: [36, ]
    padding: [1, ]
    md_bg_color: app.theme_cls.primary_light
    on_touch_down: self.check_card_focus(args)
    MDCard:
        pos_hint: {'center_x': .5, 'center_y': .5}
        radius: [36, ]
        MDFloatLayout:
            MDLabel:
                halign:'center'
                pos_hint: {'center_x': .5, "center_y": .95}
                text:'Processos - SAGE'
                font_style: 'H6'
            MDSeparator:
                pos_hint: {'center_x': .5, "center_y": .9}
                color: app.theme_cls.primary_color
                size_hint_x: .9
            ScrollView:
                pos_hint: {'center_x': .5, "center_y": .5}
                size_hint: .9, .7
                MDList:
                    id:md_list
            MDSpinner:
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: .33, .33
                active: root.spinner
            MDFillRoundFlatButton:
                pos_hint: {'center_x': .5, "center_y": .05}
                text:'Close'
                on_release:root.close_card()


<ListItem>:
    on_size:
        self.ids._right_container.width = container.width
        self.ids._right_container.x = container.width

    ProccessStatus:
        id: container

        MDLabel:
            text: root.status
            theme_text_color: "Custom"
            text_color: root.color
