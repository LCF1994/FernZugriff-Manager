<PingTestScreen@Screen>
    name:'ping_test'
    
    MDIconButton:
        icon:'menu'
        on_press: app.navbar.set_state("open")
        pos_hint: { 'center_x': .05, 'center_y': .925 }
    MDLabel:
        text:'Testes de Ping'
        font_style: "H4"
        pos_hint:{'center_x': .5, 'center_y': .925 }
        halign: 'center'

    MDSeparator:
        size_hint_x: .9
        color: app.theme_cls.primary_color
        pos_hint:{'center_x': .5, 'center_y': .875 }

    
    MDLabel:
        text:'Local'
        halign:'center'
        pos_hint:{'center_x': .5, 'center_y': .825 }
    MDSeparator:
        size_hint_x: .9
        pos_hint:{'center_x': .5, 'center_y': .8 }

    CardPingServer:
        server: app.SAGE_1
        pos_hint:{'center_x': .25, 'center_y': .675 }
    CardPingServer:
        server: app.SAGE_2
        pos_hint:{'center_x': .75, 'center_y': .675 }

    MDLabel:
        text:'Remoto'
        halign:'center'
        pos_hint:{'center_x': .5, 'center_y': .5 }
    MDSeparator:
        size_hint_x: .9
        pos_hint:{'center_x': .5, 'center_y': .475 }

    MDCard:
        size_hint: .4, .4
        pos_hint:{'center_x': .25, 'center_y': .25 }
    MDCard:
        size_hint: .4, .4
        pos_hint:{'center_x': .75, 'center_y': .25 }
