<BodyContainer>:
    MDFloatLayout:
        id: container
        pos_hint: {'center_x': .5 , 'center_y': .5}

        ServerDetails:
            id: details
            target: root.target
            pos_hint: {'center_x': .15 , 'center_y': .525}


        GridCharts:
            id: grid_chart
            target: root.target
            pos_hint: {'center_x': .66 , 'center_y': .525}
            size_hint: .66, .65


        Cover:
            id: cover_charts
            pos_hint: {'center_x': .66 , 'center_y': .525}
            size_hint: .66, .65
            message: 'GCD Desativado'
            opacity: .5


    MDSpinner:
        size_hint: None, None
        height: 200
        width: 200
        index: 10
        line_width: 5
        palette: root.spinner_palette
        pos_hint: {'center_x': .5, 'center_y': .5}
        active: root.spinner

    Cover:
        id: cover_all
        pos_hint: {'center_x': .5 , 'center_y': .525}
        size_hint: 1, .65

        message:'DESCONECTADO'
        opacity: .925
