<ServerStatus>
    size_hint: .4, .45
    padding: [7, 2, 2, 10 ]
    spacing: 2
    orientation: 'vertical'
    radius:[10,]
    MDLabel:
        text: root.server_name
        font_style:'H5'
        halign:'center'
    MDSeparator:
        color: app.theme_cls.primary_color
        pos_hint:{'center_x': .5}
        size_hint_x: .8
    ConnectionState:
        target: root.server
        pos_hint:{'center_x': .5}
        size_hint_x: .8  
    MDSeparator:
        # color: app.theme_cls.primary_color
        pos_hint:{'center_x': .5}
        size_hint_x: .8
    ItemWrapper:
        title:'GCD'
        value: root.gcd_status
        color: root.gcd_status_color
    ItemWrapper:
        title:'Servidor'
        value: root.server_hot
        color: root.server_hot_color
    ItemWrapper:
        title:'VisorAcesso'
        value: root.visor_acesso
        color: app.neutral_color
    MDRoundFlatButton:
        text:'Dashboard'
        pos_hint:{'center_x': .5}
        on_press: root.open_dashboard()


<ItemWrapper>
    padding: [1, 7.5, 1, 12.5]
    size_hint_x: .8
    adaptive_height: True
    pos_hint:{'center_x': .5}
    MDLabel:
        text: root.title
        adaptive_height: True
    MDLabel:
        text: root.value
        halign:'right'
        adaptive_height: True
        theme_text_color: 'Custom'
        text_color: root.color
