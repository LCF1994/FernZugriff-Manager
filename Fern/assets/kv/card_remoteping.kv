<RemotePingCard>
    padding: [7, 2, 2, 10 ]
    spacing: 2
    orientation: 'vertical'
    radius:[10,]
    MDLabel:
        text: root.server_name
        font_style:'H5'
        halign:'center'
    MDSeparator:
        size_hint_x: .9
        pos_hint:{'center_x': .5}
    ConnectionState:
        target: root.server
        pos_hint:{'center_x': .5}
    MyIpInput:
        size_hint_x: .8
        pos_hint: {"center_x": .5, "center_y": .5}
        spinner: root.spinner
        check_icon: root.check_icon
        check_color: root.check_color
    MDRoundFlatButton:
        text: 'Ping'
        disabled: root.ping_btn_disabled
        pos_hint:{'center_x': .5}
        on_press: root.ping_request()

<MyIpInput>
    padding: [3,1,1,2]
    size_hint_y: None
    height: text_field.height
    MDTextField:
        id: text_field
        hint_text:'IP : '
        pos_hint:{'center_x': .5}
    MDFloatLayout:
        adaptive_width: True
        pos_hint: {"center_y": .5}
        pos: root.width - (self.width / 2), 0
        MDSpinner:
            active: root.spinner
            size_hint: None, None
            size: dp(20), dp(20)
            pos_hint:{'center_x': .5, 'center_y': .5 }
        MDIcon:
            icon: root.check_icon
            theme_text_color: "Custom"
            text_color: root.check_color
            halign:'center'
            pos_hint:{'center_x': .5, 'center_y': .5 }
