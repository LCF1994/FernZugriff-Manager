<HelpCard>
    radius:[ 25, ]
    pos_hint: {'center_x': .5, 'center_y': .5}
    size_hint: .65, .5
    padding: [1, ]
    md_bg_color: app.theme_cls.primary_light
    on_touch_down: self.check_card_focus(args)
    MDCard:
        radius:[ 25, ]
        pos_hint: {'center_x': .5, 'center_y': .5}
        orientation:'vertical'
        padding: [5, 1, 1, 10 ]
        MDLabel:
            text: root.title
            font_style:'H6'
            size_hint: .9, .1
            adaptive_height: True
            pos_hint: {'center_x': .5, }
        MDSeparator:
            size_hint_x: .9
            color: app.theme_cls.primary_color
            pos_hint: {'center_x': .5, }
        MDLabel:
            text: root.content
            size_hint: .9, .6
            adaptive_height: True
            pos_hint: {'center_x': .5, }
        MDRoundFlatButton:
            text: 'close'
            pos_hint: {'center_x': .5, }
            on_press: root.close_card()
