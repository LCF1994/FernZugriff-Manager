<HomeScreen>
    name:'home'

    MDToolbar:
        elevation: 10
        pos_hint: {"top": 1}
        size_hint: 1, .075
        left_action_items:
            [['menu', lambda x: app.navbar.set_state("open")]]

    MDFloatLayout:
        MDLabel:
            text:'Welcome'
            font_style: "H1"
            pos_hint:{'center_x': .5, 'center_y': .65 }
            halign: 'center'
        MDRaisedButton:
            text: 'SAGE 1'
            pos_hint:{'center_x': .25, 'center_y': .25 }
            on_press:
                root.manager.current = 'sage1'
        MDRaisedButton:
            text: 'SAGE 2'
            pos_hint:{'center_x': .75, 'center_y': .25 }
            on_press:
                root.manager.current = 'sage2'
