<HomeScreen>
    name:'home'

    MDFloatLayout:

        MDLabel:
            text:'THIN CLIENT \n DASHBOARD'
            font_style: 'H4'
            pos_hint:{'center_x': .33, 'center_y': .6 }
            halign: 'center'

        Image:
            source: app.resource_path('images/bulb_lighting.png')
            pos_hint:{'center_x': .7, 'center_y': .7 }
            size_hint: .2 * 1.25, .5 * 1.25


        MDRoundFlatButton:
            text: 'SAGE 1'
            halign: 'center'
            font_style: 'H5'
            size_hint: .2, .33 / 3 
            pos_hint:{'center_x': .25, 'center_y': .2 }
            on_press:
                root.manager.current = 'sage1'
        MDRoundFlatButton:
            text: 'SAGE 2'
            font_style: 'H5'
            halign: 'center'
            size_hint: .2, .33 / 3
            pos_hint:{'center_x': .75, 'center_y': .2 }
            on_press:
                root.manager.current = 'sage2'

    MDToolbar:
        elevation: 10
        pos_hint: {'top': 1}
        size_hint: 1, .075
        left_action_items:
            [['menu', lambda x: app.navbar.set_state('open')]]
