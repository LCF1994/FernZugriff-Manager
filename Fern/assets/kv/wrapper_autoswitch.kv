<AutoSwitch>:
    size_hint: .5 , 1 / 3

    MDLabel:
        text:'Chaveamento Automatico'
        pos_hint:{'center_x': .5, 'center_y': .75 }
        halign:'center'
        adaptive_size: True
    MDIconButton:
        icon:'help-circle-outline'
        pos_hint:{'center_x': .85, 'center_y': .75 }
        on_press: root.open_help()
    AutoSwitchButton:
        pos_hint:{'center_x': .5, 'center_y': .5 }
