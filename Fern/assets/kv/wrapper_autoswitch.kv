<AutoSwitchButton>
    text: root.text
    line_width: 1.25
    line_color: root.color
    on_press: root.toggle()


<ManualSwitchButton>
    icon:'repeat'
    theme_text_color: 'Custom'
    text_color: root.color
    on_press: root.manual_trigger()
